<%- include('../layout/header.ejs') %>
    <div class="contianer mx-auto py-5  w-3/5 ">

        <a href="/subjects" class="bg-blue-500 text-white px-4 py-2 rounded">Back</a>
        <h1 class="text-3xl font-bold mt-5">Create subject</h1>
        <div class="bg-white p-5 rounded bg-white shadow my-3" x-data="{type: 'student'}">

            <form class="mt-2" action="/subjects/create" method="post">
                <div x-show="type == 'Student'" class="mb-4">
                    <label for="code" class="sr-only">code</label>
                    <input type="text" name="code" id="code" placeholder="code"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg">
                </div>

                <div class="mb-4">
                    <label for="name" class="sr-only">Name</label>
                    <input type="text" name="name" id="name" placeholder="Name"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg">
                </div>

                <div class="mb-4">
                    <label for="department" class="sr-only">department</label>
                    <input type="text" name="department" id="department" placeholder="department"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg">
                </div>

                <div class="mb-4">
                    <label for="dependencies" class="sr-only">dependencies</label>
                    <input type="test" name="dependencies" id="dependencies" placeholder="dependencies"
                        class="bg-gray-100 border-2 w-full p-4 rounded-lg" v>
                </div>


                <div class="mb-4">
                    <h3 class="font-bold text-lg  ">Types</h3>
                    <div class="flex flex-col gap-2 ml-3">
                        <div class="">
                            <input x-model="type" id="student" name="type" type="radio" value="Student">
                            <label for="student">Student</label>
                        </div>
                        <div class="">
                            <input x-model="type" id="doctor" name="type" type="radio" value="Doctor">
                            <label for="doctor">Doctor</label>
                        </div>
                        <div class="">
                            <input x-model="type" name="type" id="admin" type="radio" value="Admin">
                            <label for="admin">Admin</label>
                        </div>
                    </div>
                </div>

               

                <div>
                    <button type="submit" class="bg-green-500 text-white px-4 py-3 rounded font-medium ">Create</button>
                </div>
            </form>
        </div>
    </div>

<%- include('../layout/footer.ejs') %>